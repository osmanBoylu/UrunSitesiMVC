@model IEnumerable<UrunSitesiMVC.Models.Customer>

@{
    ViewData["Title"] = "View";
}

<h1>Müşteriler</h1>


<table class="table">
    <thead>
        <tr>
            <th>
               ID
            </th>
            <th>
                İsim
            </th>
            <th>
                Soyisim
            </th>
            <th>
                Email
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

        </tr>
}
    </tbody>
</table>
